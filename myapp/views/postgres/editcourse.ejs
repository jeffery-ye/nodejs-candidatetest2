<html>

<head>
    <% include ../common/head %>
</head>

<body>
    <div class="" id="home">
        <div class="container">
            <div>
                <nav class="navbar navbar-expand-xl">
                    <% if (user) { %>
                    <% include ../common/navbar %>
                    <% } else { %>
                    <% include ../common/navbar_noleads %>
                    <% } %>
                </nav>
            </div>


            <div class="container tm-mt-big tm-mb-big">
                <div><% if (user.email) { %> <table class="table table-striped table-hover">

                        <thead class="thead-dark">
                            <tr>
                                <th>Day</th>
                                <th>Period</th>
                                <th>Course Name</th>
                                <th>User Name</th>

                                <th>Actions</th>
                                <th>Delete?</th>
                            </tr>


                        </thead>

                        <% for (var i=0; i< courses.length; i++) { %>
                        <tr>
                            <td><%= courses[i].daytype %> </td>
                            <td><%= courses[i].period %> </td>
                            <td><%= courses[i].coursename %> </td>
                            <td><%= courses[i].username %> </td>
                            <td>
                                <form action="/postgres/courseedit" , method="POST">

                                    <input class="btn-sm btn-info" type = "hidden" value=<%= courses[i].id %>
                                        name="courseid"></input>
                                        <button class="btn btn-primary" type="submit">Edit</button>
                                </form>
                            </td>
                            <td><button type="button" class="btn-sm btn-danger">Delete</button>
                            </td>
                        </tr>
                        <% } %>
                        <% } %>

                    </table>
                </div>
                <div class="row align-items-center">
                    <form action='/postgres/createcourse' method='POST'>
                        <h5>Day Color</h5>
                        <input type='text' value = <%= courses[0].daytype %> name='daytype' required /> 
                        <h5>Period</h5>
                        <input type='text' value = <%= courses[0].period %> name='period' required />
                        <h5>Class Name</h5>
                        <input type='text' value = <%= courses[0].coursename %> name='coursename' required />
                        <button type='submit'>Update Schedule</button>
                    </form>

                </div>
            </div>

            <div>
                <% include ../common/notification_list %>
            </div>

            <footer class="tm-footer row tm-mt-small">
                <% include ../common/footer %>
            </footer>
        </div>
    </div>
</body>

</html>